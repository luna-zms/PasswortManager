<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" type="javafx.scene.layout.HBox"
	fillHeight="false" maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity" prefHeight="26.0" prefWidth="301.0"
	style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8.0.999-ea">
	<PasswordField fx:id="passwordField" maxWidth="1.7976931348623157E308"
		prefHeight="26.0"
		style="-fx-background-color: transparent; -fx-border-style: solid none solid solid;"
		styleClass=".password-field" HBox.hgrow="ALWAYS" />
	<TextField fx:id="textField" maxWidth="1.7976931348623157E308"
		prefHeight="26.0" managed="false" visible="false"
		style="-fx-background-color: transparent; -fx-border-style: solid none solid solid;"
		styleClass=".password-field" HBox.hgrow="ALWAYS" />
	<Button fx:id="copyButton" alignment="CENTER_RIGHT"
		mnemonicParsing="false" prefWidth="10.0" maxWidth="10.0" prefHeight="26.0"
		contentDisplay="GRAPHIC_ONLY"
		style="-fx-background-color: transparent; -fx-border-style: solid none solid none;"
		styleClass=".password-button">

		<tooltip>
			<Tooltip text="Passwort kopieren" />
		</tooltip>
		<padding>
			<Insets left="2.5" right="5" top="3.1" bottom="3.1" />
		</padding>
	</Button>
	<ToggleButton fx:id="eyeButton" alignment="CENTER_RIGHT"
		mnemonicParsing="false" prefWidth="10.0" maxWidth="10.0" prefHeight="26.0"
		contentDisplay="GRAPHIC_ONLY"
		style="-fx-background-color: transparent; -fx-border-style: solid solid solid none;"
		styleClass=".password-button">

		<tooltip>
			<Tooltip fx:id="toggleShowPassword" text="Passwort anzeigen" />
		</tooltip>
		<padding>
			<Insets left="5" right="2.5" top="3.1" bottom="3.1" />
		</padding>
	</ToggleButton>

</fx:root>
